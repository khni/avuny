{
  "name": "@avuny/api",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "author": {
    "name": "Khaled Eleskandrany",
    "email": "khaledeskandrany@gmail.com"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schemas": "./src/schemas.ts",
    "./types": "./src/types.ts"
  },
  "scripts": {
    "test": "vitest run",
    "clean:build": "rm -rf dist && rm -rf tsconfig.build.tsbuildinfo && rm -rf .turbo",
    "clean:modules": "rm -rf node_modules",
    "clean:all": "pnpm clean:modules && clean:build",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch --preserveWatchOutput",
    "api:docs": "api-documenter markdown -i temp -o docs",
    "api:extract": "api-extractor run --local",
    "openapi:generate": "node --loader ts-node/esm ./scripts/generate-openapi.ts",
    "api:generate": "orval"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@microsoft/api-documenter": "^7.26.29",
    "@microsoft/api-extractor": "^7.52.8",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.3",
    "eslint": "^9.28.0",
    "typescript": "~5.8.3",
    "ts-node": "^10.9.2",
    "vitest": "^3.2.3",
    "zod": "^4.0.5"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.5",
    "@khni/auth": "^3.0.0",
    "@khni/auth-errors": "^1.0.0",
    "@khni/error-handler": "^2.1.1",
    "@khni/utils": "^1.0.0",
    "@avuny/auth": "workspace:*",
    "@avuny/region": "workspace:*",
    "@avuny/role": "workspace:*",
    "@avuny/organization": "workspace:*",
    "@avuny/permission": "workspace:*",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "hono": "^4.10.7",
    "orval": "^7.17.0"
  }
}
