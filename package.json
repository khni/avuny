{
  "name": "avuny",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean:build": "find . \\( -name '.turbo' -o -name 'dist' -o -name 'build' \\) -type d -prune -exec rm -rf '{}' + && find . \\( -name '*.tsbuildinfo' -o -name 'tsconfig.build.tsbuildinfo' \\) -type f -delete",
    "clean:packages": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && rm -f pnpm-lock.yaml",
    "clean:all": "pnpm run clean:build && pnpm run clean:packages",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.7.4",
    "turbo": "^2.6.3",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
