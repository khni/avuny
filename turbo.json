{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["DATABASE_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "JWT_SECRET",

        "GOOGLE_CLIENT_ID",
        "GOOGLE_SECRET",
        "GOOGLE_REDIRECT_URI",

        "FACEBOOK_APP_ID",
        "FACEBOOK_SECRET",
        "FACEBOOK_REDIRECT_URI",

        "FRONTEND_SOCIAL_REDIRECT"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean:build": {
      "cache": false,
      "persistent": true
    }
  }
}
